{
  "version": 2,
  "static": {
    "include": [
      "**/*.html",
      "**/*.png",
      "**/*.jpg"
    ],
    "exclude": [
      "node_modules",
      ".git",
      "**/*.spec.ts"
    ]
  },
  "discovery": {
    "allowed-hosts": [
      "localhost",
      "platform.test-simmons.com",
      "login.microsoftonline.com"
    ],
    "network-idle-timeout": 750
  },
  "static-snapshots": {
    "include": "playwright-report/**/*.png"
  },
  "comparison": {
    "auto-approve-on-empty-baseline": false,
    "threshold": 0.01,
    "include-all-browsers": true
  }
}
